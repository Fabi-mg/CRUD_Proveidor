<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Proveidors{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        {% endblock %}
    </head>
    <body>
        {% block body %}
          <h1 class='text-center'>Viajes Para Ti (Proveïdors)</h1>
          <div class="container my-5">
          <table>
    <table class="table table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Nom</th>
                        <th scope="col">Email</th>
                        <th scope="col">Telèfon</th>
                        <th scope="col">Tipus</th>
                        <th scope="col">Actiu</th>
                        <th scope="col">Data creació</th>
                        <th scope="col">Última edició</th>
                    </tr>
                </thead>
                <tbody>
                {% for proveidor in proveidors %}
                    <tr>
                        <td scope="row">{{proveidor.nom}}</td>
                        <td scope="row">{{proveidor.email}}</td>
                        <td scope="row">{{proveidor.telf}}</td>
                        <td scope="row">{{proveidor.tipus}}</td>
                        <td scope="row">
                            {% if proveidor.actiu %}
                                Sí
                            {% else %}
                                No
                            {% endif %}
                        </td>
                        <td scope="row">{{proveidor.incorporacio |date}}</td>
                        <td scope="row">
                            {% if proveidor.edicio is not null %}
                                {{ proveidor.edicio|date }}
                            {% else %}
                                Sense edició
                            {% endif %}
                        </td>
                        <td scope="row"><a class="btn btn-secondary" href="/proveidors/update/{{proveidor.id}}">Editar</a></td>
                        <td scope="row"><a class="btn btn-secondary" href="/proveidors/remove/{{proveidor.id}}">Eliminar</a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <a class="btn btn-primary float-end" href="/proveidors/new">Afegir</a>
            </div>
        {% endblock %}
    </body>
</html>